@model EmployeesApp.Web.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
﻿
<!DOCTYPE html>
<html>
<head>
    <title>Create Employee</title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>
<body style="margin: 50px;">
    <h2>Add an employee</h2>

    <form asp-controller="Employee" asp-action="create">
        <label asp-for="Name">Employee name:</label>
        <input type="text" style="width: 300px;" asp-for="Name" /><br />

        <label asp-for="Email">Employee Email:</label>
        <input type="text" style="width: 300px;" asp-for="Email" /><br />

        <input type="submit" style="width: 300px;" value="Save" />
    </form>
    @if (ViewData.ModelState.ErrorCount > 0)
    {
    <div asp-validation-summary="All">
        <ul>
        </ul>
    </div>
    }
    <h2><a href="/">Back to Index</a></h2>
</body>
</html>
